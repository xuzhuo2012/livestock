<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".AddHouseActivity">

    <Button
            android:id="@+id/add_house_submit_button"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="@string/action_send"/>
    
    <TextView
            android:id="@+id/add_house_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/title_activity_add_house"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

     <Button
            android:id="@+id/add_house_cancel_button"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			 android:layout_alignParentRight="true"
            android:text="@string/add_cancel"/>
    
    <TextView
            android:id="@+id/add_house_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/add_house_title"
            android:layout_marginTop="20dp"
            android:text="@string/house_base_info_house_id"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
            android:id="@+id/add_house_id_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_house_id_label"
            android:layout_alignBottom="@+id/add_house_id_label"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/add_house_id_label"
            android:ems="10"
            android:inputType="number">

        <requestFocus/>
    </EditText>

    <TextView
            android:id="@+id/add_house_animal_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/add_house_id_edit_text"
            android:layout_marginTop="16dp"
            android:text="@string/house_base_info_animalType"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
            android:id="@+id/add_house_animal_type_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_house_animal_type_label"
            android:layout_alignBottom="@+id/add_house_animal_type_label"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/add_house_animal_type_label"
            android:ems="10"
            android:inputType="none"/>

    <TextView
            android:id="@+id/add_house_livestockCount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/add_house_animal_type_edit_text"
            android:layout_marginTop="16dp"
            android:text="@string/house_base_info_livestockCount"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
            android:id="@+id/add_house_livestockCount_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_house_livestockCount_label"
            android:layout_alignBottom="@+id/add_house_livestockCount_label"
            android:layout_alignLeft="@+id/add_house_animal_type_edit_text"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:inputType="number"/>

   

    

</RelativeLayout>